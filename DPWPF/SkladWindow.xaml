<Window x:Class="DruzynaPilkawpf.SkladWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aktualny Skład" Height="500" Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <TextBlock Text="ZARZĄDZANIE" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <TextBlock Text="Sortowanie:" Foreground="Gray" Margin="0,5"/>
            <Button x:Name="BtnSortNazwisko" Content="🔤 Nazwisko" Height="30" Margin="0,2" Click="BtnSortNazwisko_Click"/>
            <Button x:Name="BtnSortNumer" Content="🔢 Numer" Height="30" Margin="0,2" Click="BtnSortNumer_Click"/>
            <Button x:Name="BtnSortGole" Content="⚽ Gole" Height="30" Margin="0,2" Click="BtnSortGole_Click"/>
            <Button x:Name="BtnSortAsysty" Content="👟 Asysty" Height="30" Margin="0,2" Click="BtnSortAsysty_Click"/>

            <Separator Margin="0,15"/>

            <TextBlock Text="Akcje:" Foreground="Gray" Margin="0,5"/>

            <Button Content="🚑 Zgłoś Kontuzję" Height="40" Margin="0,2" Background="#FFE0E0" Click="BtnKontuzja_Click"/>

            <Button x:Name="BtnZamknij" Content="Zamknij" Height="30" Margin="0,20,0,0" Click="BtnZamknij_Click"/>
        </StackPanel>

        <GroupBox Header="Lista Zawodników" Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="TxtLicznik" Text="Liczba zawodników: 0" Margin="5" FontWeight="Bold" Foreground="#005A9C"/>

                <ListBox x:Name="ListaGraczy" Grid.Row="1" Margin="0,5,0,0" HorizontalContentAlignment="Stretch">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="5">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock x:Name="TxtImie" Text="{Binding Imie}" Margin="0,0,5,0"/>
                                    <TextBlock x:Name="TxtNazwisko" Text="{Binding Nazwisko}" FontWeight="Bold" Margin="0,0,10,0"/>

                                    <TextBlock Text="[" Foreground="Gray"/>
                                    <TextBlock Text="{Binding PozycjaNaBoisku}" Foreground="Gray"/>
                                    <TextBlock Text=" nr " Foreground="Gray"/>
                                    <TextBlock Text="{Binding NumerKoszulki}" Foreground="Gray"/>
                                    <TextBlock Text="]" Foreground="Gray" Margin="0,0,15,0"/>

                                    <TextBlock Text="⚽ "/>
                                    <TextBlock Text="{Binding Staty.LiczbaGoli}" FontWeight="Bold" Margin="0,0,10,0"/>

                                    <TextBlock Text="👟 "/>
                                    <TextBlock Text="{Binding Staty.LiczbaAsyst}" FontWeight="Bold" Margin="0,0,10,0"/>

                                    <TextBlock Text="Mecze: " Foreground="Gray"/>
                                    <TextBlock Text="{Binding Staty.RozegraneMecze}" Margin="0,0,10,0"/>

                                    <TextBlock x:Name="TxtKontuzjaInfo" Text=" (KONTUZJA!)" 
                                               Foreground="Red" FontWeight="Bold" Visibility="Collapsed"/>
                                </StackPanel>
                            </Border>

                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding CzyKontuzjowany}" Value="True">
                                    <Setter TargetName="TxtKontuzjaInfo" Property="Visibility" Value="Visible"/>
                                    <Setter TargetName="TxtNazwisko" Property="Foreground" Value="Red"/>
                                    <Setter TargetName="TxtImie" Property="Foreground" Value="Red"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </GroupBox>
    </Grid>
</Window>