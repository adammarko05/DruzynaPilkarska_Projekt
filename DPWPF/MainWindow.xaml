<Window x:Class="DruzynaPilkawpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DruzynaPilkawpf"
        mc:Ignorable="d"
        Title="Menu Główne" Height="500" Width="900"
        Background="#005A9C" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Viewbox>
                <Label Content="DRUŻYNA PIŁKARSKA" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       FontFamily="Arial Black"/>
            </Viewbox>
        </Grid>

        <UniformGrid Grid.Row="1" Rows="1" Columns="4" Margin="0">

            <Button Background="White" Margin="10" Cursor="Hand"
                    Height="180" VerticalAlignment="Center" Click="Button_Sklad_Click">
                <StackPanel VerticalAlignment="Center" Margin="5">
                    <TextBlock Text="SKŁAD" 
                               HorizontalAlignment="Center" 
                               FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>
                    <Image Source="/Images/sklad.png" Height="80" Width="80"/>
                </StackPanel>
            </Button>

            <Button Background="White" Margin="10" Cursor="Hand"
                    Height="180" VerticalAlignment="Center" Click="Button_Info_Click">
                <StackPanel VerticalAlignment="Center" Margin="5">
                    <TextBlock Text="INFO O KLUBIE" 
                               HorizontalAlignment="Center" 
                               FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>
                    <Image Source="/Images/info.png" Height="80" Width="80"/>
                </StackPanel>
            </Button>

            <Button Background="White" Margin="10" Cursor="Hand"
                    Height="180" VerticalAlignment="Center" Click="Button_Dodaj_Click">
                <StackPanel VerticalAlignment="Center" Margin="5">
                    <TextBlock Text="DODAJ GRACZA" 
                               HorizontalAlignment="Center" 
                               FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>
                    <Image Source="/Images/dodaj.png" Height="80" Width="80"/>
                </StackPanel>
            </Button>

            <Button Background="White" Margin="10" Cursor="Hand"
                    Height="180" VerticalAlignment="Center" Click="Button_Mecz_Click">
                <StackPanel VerticalAlignment="Center" Margin="5">
                    <TextBlock Text="ZAGRAJ MECZ" 
                               HorizontalAlignment="Center" 
                               FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>
                    <Image Source="/Images/mecz.png" Height="80" Width="80"/>
                </StackPanel>
            </Button>

        </UniformGrid>
    </Grid>
</Window>