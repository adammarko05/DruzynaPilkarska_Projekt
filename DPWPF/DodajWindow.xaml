<Window x:Class="DruzynaPilkawpf.DodajWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj Nowego Zawodnika" Height="600" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="NOWY TRANSFER" FontSize="20" FontWeight="Bold" Foreground="#005A9C" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Imię:" Foreground="Gray"/>
            <TextBox x:Name="TxtImie" Height="25" Margin="0,0,0,10"/>

            <TextBlock Text="Nazwisko:" Foreground="Gray"/>
            <TextBox x:Name="TxtNazwisko" Height="25" Margin="0,0,0,10"/>

            <TextBlock Text="Data urodzenia (RRRR-MM-DD lub DD.MM.RRRR):" Foreground="Gray"/>
            <TextBox x:Name="TxtDataUrodzenia" Height="25" Margin="0,0,0,10" ToolTip="Np. 1999-05-15"/>

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Waga (kg):" Foreground="Gray"/>
                    <TextBox x:Name="TxtWaga" Height="25"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Wzrost (m, np 1,85):" Foreground="Gray"/>
                    <TextBox x:Name="TxtWzrost" Height="25"/>
                </StackPanel>
            </Grid>

            <TextBlock Text="Pozycja na boisku:" Foreground="Gray"/>
            <ComboBox x:Name="CmbPozycja" Height="25" Margin="0,0,0,10"/>

            <TextBlock Text="Lepsza noga:" Foreground="Gray"/>
            <ComboBox x:Name="CmbNoga" Height="25" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <TextBlock Text="Poziom Umiejętności: " Foreground="Gray"/>
                <TextBlock Text="{Binding ElementName=SliderUmiejetnosci, Path=Value, StringFormat=N0}" FontWeight="Bold" Foreground="#005A9C"/>
            </StackPanel>
            <Slider x:Name="SliderUmiejetnosci" Minimum="1" Maximum="100" Value="50" 
                    TickFrequency="1" IsSnapToTickEnabled="True" Margin="0,0,0,15"/>

            <Separator Margin="0,5,0,15"/>

            <TextBlock Text="Numer na koszulce:" Foreground="Gray"/>
            <TextBox x:Name="TxtNumer" Height="25" Width="100" HorizontalAlignment="Left" Margin="0,0,0,20"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Content="Anuluj" Height="40" Margin="0,0,5,0" Click="BtnAnuluj_Click"/>
                <Button Content="DODAJ DO SKŁADU" Grid.Column="1" Height="40" Margin="5,0,0,0" 
                        Background="#005A9C" Foreground="White" FontWeight="Bold" Click="BtnZapisz_Click"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>