<Window x:Class="DruzynaPilkawpf.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Informacje o Klubie" Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Border Background="#F9F9F9" Padding="20">
        <StackPanel>

            <TextBlock Text="WIZYTÓWKA KLUBU" HorizontalAlignment="Center" 
                       FontSize="18" FontWeight="Bold" Foreground="#AAAAAA" Margin="0,0,0,20"/>

            <Border Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,15" BorderBrush="#DDDDDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="NAZWA KLUBU" FontSize="10" Foreground="Gray" FontWeight="Bold"/>
                    <TextBlock x:Name="TxtNazwa" Text="-" FontSize="22" FontWeight="Bold" Foreground="#005A9C"/>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,15" BorderBrush="#DDDDDD" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="🏟️" FontSize="24" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="STADION" FontSize="10" Foreground="Gray" FontWeight="Bold"/>
                        <TextBlock x:Name="TxtStadionNazwa" Text="-" FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock x:Name="TxtStadionPojemnosc" Text="Pojemność: -" FontSize="12" Foreground="#555555"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,15" BorderBrush="#DDDDDD" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="👔" FontSize="24" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="TRENER" FontSize="10" Foreground="Gray" FontWeight="Bold"/>
                        <TextBlock x:Name="TxtTrener" Text="-" FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock x:Name="TxtTaktyka" Text="Taktyka: -" FontSize="12" Foreground="#555555"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,20" BorderBrush="#DDDDDD" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="©" FontSize="24" VerticalAlignment="Center" Margin="0,0,15,0" Foreground="#FFD700"/>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="KAPITAN" FontSize="10" Foreground="Gray" FontWeight="Bold"/>
                        <TextBlock x:Name="TxtKapitan" Text="-" FontSize="16" FontWeight="SemiBold"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Button Content="Zamknij" Height="40" Background="#005A9C" Foreground="White" 
                    FontWeight="Bold" BorderThickness="0" Click="BtnZamknij_Click" Cursor="Hand">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>

        </StackPanel>
    </Border>
</Window>