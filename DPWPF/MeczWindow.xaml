<Window x:Class="DruzynaPilkawpf.MeczWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dzień Meczowy" Height="500" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#2E7D32" Offset="0.0"/>
                <GradientStop Color="#1B5E20" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="DZIEŃ MECZOWY" FontSize="32" FontWeight="Bold" Foreground="White" 
                       HorizontalAlignment="Center" Margin="0,0,0,30" FontFamily="Arial Black">
                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="3" BlurRadius="5"/>
                </TextBlock.Effect>
            </TextBlock>

            <Border Background="White" CornerRadius="15" Padding="25" Width="340">
                <Border.Effect>
                    <DropShadowEffect Opacity="0.4" BlurRadius="20"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Wybierz zawodnika do gry:" FontWeight="Bold" Foreground="Gray" 
                               HorizontalAlignment="Center" Margin="0,0,0,10"/>

                    <ComboBox x:Name="CmbPilkarze" Height="35" Margin="0,0,0,20" 
                    FontSize="14" Padding="5" VerticalContentAlignment="Center">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Nazwisko}" FontWeight="Bold"/>
                                    <TextBlock Text=" - " Foreground="Gray"/>
                                    <TextBlock Text="{Binding PozycjaNaBoisku}" Foreground="Blue"/>
                                    <TextBlock Text=" (Skill: " Foreground="Gray" Margin="5,0,0,0"/>
                                    <TextBlock Text="{Binding Umiejetnosci}" FontWeight="Bold"/>
                                    <TextBlock Text=")" Foreground="Gray"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Button Content="⚽ ROZEGRAJ MECZ" Height="55" FontSize="16" FontWeight="Bold" 
                            Background="#FFD700" Foreground="#333" BorderThickness="0" Cursor="Hand"
                            Click="BtnGraj_Click" Margin="0,0,0,15">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Content="🏥 Centrum Odnowy (Regeneracja)" 
                            Height="45" FontSize="14" FontWeight="SemiBold"
                            Background="#E0F7FA" Foreground="#006064" BorderThickness="1" BorderBrush="#B2EBF2"
                            Cursor="Hand" Click="BtnIdzDoRegeneracji_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Border>

            <TextBlock x:Name="TxtWynik" Text="" FontSize="18" FontWeight="Bold" Foreground="#FFD700" 
                       TextAlignment="Center" TextWrapping="Wrap" Margin="0,25,0,0">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="1"/>
                </TextBlock.Effect>
            </TextBlock>

            <Button Content="↩ Wróć do szatni" Margin="0,30,0,0" 
                    Background="Transparent" Foreground="White" Opacity="0.8"
                    BorderThickness="0" Cursor="Hand" Click="BtnZamknij_Click" FontWeight="Bold"/>

        </StackPanel>
    </Grid>
</Window>